/**
 * Generate information for the status page.
 */
function _mediamosa_tool_spraak_status_generate() {
  // For several topics we provide a link to webpages with configuration hints.
  $helper_links = array(
    'spraak' => l('here', 'http://www.spraak.org'),
  );

  $results = array();
  $exec_output = array();
  $found = mediamosa_io::command_installed('/opt/spraak/nbest/GOnbest', $exec_output, array(1));

  $status_line = $found ? "SPRAAK v1.0 installed." : t('SPRAAK not found');
  $version = $found ? "1.0" : ''; // SPRAAK does not support version requests.
  $results['app_spraak'] = array(
    'title' => t('Transcripting tool: SPRAAK'),
    'value' => $status_line,
    'severity' => _mediamosa_maintenance_status_okerror($found && is_numeric($version)),
    'description' => $found ? '' : t('Install SPRAAK. You can find more information about SPRAAK !here', array('!here' => $helper_links['spraak'])),
  );

  // Making the report.
  return array(
    'configuration' => array(
      'title' => t('Transcripting tool'),
      'results' => $results,
    ),
  );
}

/**
 * Implements hook_mediamosa_status_collect().
 *
 * @param reset boolean
 *
 * @return array
 *   All the statuses in an array
 */
function mediamosa_tool_spraak_mediamosa_status_collect($reset = FALSE) {

  $mediamosa_status_collect = array();
  if (!$reset) {
    $mediamosa_status_collect = variable_get('mediamosa_status_spraak_collect_' . mediamosa::get_server_id(), array());
  }

  //if (empty($mediamosa_status_collect)) {
    $mediamosa_status_collect = array('time' => REQUEST_TIME, 'statuses' => _mediamosa_tool_spraak_status_generate());
    variable_set('mediamosa_status_spraak_collect_' . mediamosa::get_server_id(), $mediamosa_status_collect);
    //}

  return $mediamosa_status_collect['statuses'];
}

